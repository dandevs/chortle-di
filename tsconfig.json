{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,

        "declaration": true,
    },

    "exclude": [
        "node_modules",
        "tests"
    ],

    "typeAcquisition": {
        "enable": true
    }
}